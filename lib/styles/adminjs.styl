@import url('//fonts.googleapis.com/css?family=Lato:300,400,700,400italic')

@import url('//netdna.bootstrapcdn.com/font-awesome/3.2.1/css/font-awesome.min.css')

@import 'nib'

global-reset()


blue-color = #2693FF
red-color = #D93600
highlight-color = #F8F8E6
hpad = 48px


button(color)
  border-radius 4px
  font-size 12px
  color #fff
  font-weight bold
  padding 4px 8px
  background color
  border 1px solid darken(color, 10%)
  text-transform capitalize

  &:hover
    background darken(color, 8%)

blue-button()
  button(blue-color)

gray-button()
  button(#666)

red-button()
  button(red-color)


html
  overflow-y scroll

body, html
  font-family Lato
  color #111

a
  color inherit
  text-decoration none

.adminjs-application-view

  > header
    position relative
    z-index 100
    height = 48px
    h1
      display inline
      font-size 24px
      font-weight bold
      float left
      padding 0 hpad
      line-height height
    nav
      display inline-block
      line-height height
      vertical-align bottom
      ul
        display: inline-block
        vertical-align bottom
        li
          display inline-block
          line-height 36px
          vertical-align bottom
          a
            font-size 16px
            padding 0 16px
            display inline-block
            
            margin-left 8px
            text-transform capitalize

            &.active
              font-weight bold
              background #efefef
              border-top 1px solid #ccc
              border-left 1px solid #ccc
              border-right 1px solid #ccc
              box-sizing border-box
              padding-bottom 1px
              margin-bottom -1px

    .credits
      float right
      font-size 11px
      margin-top 18px
      margin-right hpad
      a
        color blue-color

        &:hover
          text-decoration underline

.adminjs-index-view, .adminjs-resource-view

  > header
    position relative
    padding 8px hpad
    background #efefef
    border-bottom: 1px solid #ccc
    border-top: 1px solid #ccc
    text-align center
    line-height 32px
    clearfix()

    h1
      text-transform capitalize
      font-size 16px
      float left
      white-space nowrap

    ul.actions
      float right
      clearfix()

      li
        float: left
        margin-left 6px

      a
        blue-button()

        &.remove
          red-button()

        &.cancel
          gray-button()

.adminjs-search-view

  display inline-block

  .fulltext-container
    display inline-block
    position relative

  #fulltext
    line-height 16px
    font-size 14px
    width 400px
    padding 5px 8px
    box-sizing border-box
    margin 0
    border 1px solid #ccc

    &:focus
      outline none
      border-color blue-color

  .icons
    position absolute
    right 0
    top 0
  .icon-search
    line-height 28px
    color: #999
    padding-right 8px
  .spinner-display
    margin-top: 16px
    margin-right: 16px

  .toggle-more
    padding-left 8px
    font-size 20px
    color #999

    &:hover
      color blue-color

  .fixed-indicator
    position: fixed
    bottom: 24px
    right: 24px
    width: 25px
    height: 25px
    background rgba(blue-color, 0.8)
    border-radius 4px
    .spinner
      padding-left 9px
      margin-top -3px


.adminjs-filter-view

  display inline-block
  margin 4px 8px

  .icon-filter
    color: #999
    font-size 11px

  label
    color #666
    font-size 11px
    text-transform uppercase
    padding-right 8px

    &.check
      text-transform inherit
      color: #444

  input[type="text"]
    line-height 11px
    font-size 11px
    width 160px
    padding 4px 6px
    box-sizing border-box
    margin 0
    border 1px solid #ccc

    &:focus
      outline none
      border-color blue-color

.adminjs-index-table-view
  th, td
    white-space nowrap
    text-overflow ellipsis
    overflow hidden
    max-width 240px

.adminjs-index-table-view, .adminjs-resource-view table
    margin-top -1px
    width 100%
    border-collapse collapse
    font-size 14px
    height 100
    overflow scroll
    th, td
      padding 8px
      border 1px solid #ccc
      font-weight lighter
      &:first-of-type
        padding-left hpad
        border-left none
      &:last-of-type
        padding-right hpad
        border-right none

      &.field-name
        text-transform uppercase
        text-align right
    th
      background #f8f8f8
      text-transform uppercase
      font-weight normal
      font-size 12px

    tr:hover
      td
        background #ffffee

    a
      font-weight: bold
      color: blue-color

      &:hover
        text-decoration underline

    .text-editor
      input[type="text"]
        box-sizing border-box
        margin 0
        border 1px solid #ccc
        margin-top -3px
        margin-bottom -3px
        width 256px

        &:focus
          outline none
          border-color blue-color


.has-many-renderer
  li
    display: inline
    &:after
      content: ','
    &:last-of-type:after
      content: ''

